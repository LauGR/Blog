<%- contentFor('titre')%>
    <h4 class="text-center">
        <%= article.name %>
    </h4>
    <%- contentFor('menu')%>

        <form action="/updatearticle/<%= article._id%>" enctype="multipart/form-data" method="POST">

            <input type="file" name="img" class='btn btn-primary' value="<%= article.img %>">
            <input type="text" name="img" value="<%= article.img %>" readonly>

            <div class="ville">
                <div class="form-group">
                    <label>Nom</label>
                    <input type="put" class="form-control" name="name" value="<%= article.name%>">
                </div>
            </div>

            <div class="form-group">
                <label for="descriptif">Descriptif de l'article</label>
                <textarea class="form-control" id="" cols="30" name="preview" maxlength="190" rows="5">
                    <%= article.preview%>
                </textarea>

            </div>
            <div class="form-group">
                <label for="descriptif">Résumé du voyage</label>
                <textarea class="form-control" id="" cols="30" name="text" rows="5">
                    <%= article.text%>
                </textarea>

            </div>

            <button type="submit" class="btn btn-success btn-lg">Confirmer</button>
        </form>
