<%-contentFor('article')%>
<% article.forEach((article)=>{ %>
    <div class="container-fluid d-none d-lg-block d-xl-none">
        <div class="article-content">

            <h2 class="text-center voyageTitre">Mes articles</h2>

            <div class="row article">
                <div class="col-md-4">
                    <div class="carte">

                            <img src="/images/<%= article.img %>" class="img-responsive" alt="">
                            <div class="ville">
                                <h1>
                                    <%= article.title %>
                                </h1>
                            </div>
                            <div class="date">

                                <h3>
                                    <%= article.date %>
                                </h3>
                                <p>

                                    <div class="details">
                                        <p>
                                            <%= article.content %>
                                        </p>
                                    </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%  }); %>