<%- contentFor('titre')%>
<h4 class="text-center">
    <%= article.title %>
</h4>
<%- contentFor('menu')%>

    <form action="/dashboard/listdraftcopyupdate/<%=article._id%>" enctype="multipart/form-data" method="POST">

        <input type="file" name="img" class='btn btn-primary' value="<%= article.img %>">
        <input type="text" name="img" value="<%= article.img %>" readonly>

      
            <div class="form-group">
                <label>Titre</label>
                <input type="put" class="form-control" name="title" value="<%= article.title%>">
            </div>
            <div class="form-group">
                    <label>Date</label>
                    <input type="put" class="form-control" name="date" value="<%= article.date%>">
                </div>
    

        <div class="form-group">
            <label for="descriptif">Descriptif de l'article</label>
            <textarea class="form-control" id="" cols="30" name="content" maxlength="190" rows="5">
                <%= article.content%>
            </textarea>

        </div>
       
        <button type="submit" class="btn btn-success btn-lg">Sauvegarder</button>

        <button formaction='/dashboard/listdraftcopypush/<%=article._id%>' type="submit"class="btn btn-success btn-lg">Publier</button>
     
    </form>
