<div class="container-fluid d-none d-lg-block d-xl-none">
    <div class="card-content">

        <h2 class="text-center voyageTitre">Notre s√©lection du moment</h2>

        <div class="row carteVoyage">
            <% mesarticles.forEach((articles)=>{ %>
                <div class="col-md-4">
                    <div class="carte">
                        <img src="images/<%= articles.img %>" class="img-responsive" alt="">
                        <div class="ville">
                            <h1>
                                <%= articles.name %>
                            </h1>
                        </div>
                        <div class="date">

                            <h3>Voyage de
                                <%= articles.sejour %> jours !</h3>
                            <p>

                                <%= articles.dateA %> au
                                    <%= articles.dateR %>
                            </p>

                        </div>
                        <div class="details">
                            <p>
                                <%= articles.preview %>
                            </p>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <a href="voyage/<%= articles.url %>" class="btn btn-details btn-lg">Decouvrir</a>

                            </div>
                            <div class="col-md-6">
                                <a href="/contact" class="btn btn-warning btn-lg text-center">Contactez-nous</a>
                            </div>
                        </div>
                    </div>
                </div>




                <%  }); %>
        </div>
    </div>
</div>